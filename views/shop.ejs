<!-- syntax for including ejs file  -->
<%- include('includes/head.ejs') %> 

    <link rel="stylesheet", href="form.css">
    <link rel="stylesheet", href="product.css">
</head>
<body>
<%- include('includes/navigation.ejs') %>
    <main>
    <!-- syntax for using conditional statement in ejs -->
    <% if(prods.length > 0) { %> 
      <div class="grid">
       <% for( let product of prods){ %>
       <article class="card product-item">
          <header class="card_header">
           <h1 class="product_title"><%= product.title %></h1>
           <div class="card_image">
            <img src="https://tse1.mm.bing.net/th?id=OIP.sSiD-Vx7kyByAfg4GwFiNgHaFG&pid=Api&P=0&h=220" alt="Book">
           </div>
           <div class="card_content">
            <h2 class="product_price">$19.99</h2>
            <p class="product_description">A very interesting book </p>
           </div>
           <div class="card_actions">
            <button class="btn">Add to cart</button>
           </div>
          </header>
       </article>
       <% } %>
       </div>
       <% } else{ %>
        <h1>No products found!</h1>
       <% } %>
    </main>
</body>
</html>